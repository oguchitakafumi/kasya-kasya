<% if logged_in? %>
  <div class="container">
     <h4 span style="color:black">Picture</h4>
  </div><hr />
<div class="row">
    <aside class="col-md-6">
      <section class="user_info">
         <%= render 'shared/user_info' %>
      </section>
      <section class="textbox_form">
        <%= render 'shared/textbox_form' %>
      </section>
    </aside>
  </div>

  <% else %>
  <div class="center jumbotron">
    <h1 span style="color:white">Welcome to the Kasyatter</h1>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>

